{
  "name": "br-lsp",
  "displayName": "BR Language Server",
  "version": "0.1.0",
  "description": "Language server for the Business Rules (BR) programming language",
  "categories": [],
  "keywords": [
    "br",
    "business-rules",
    "language-server",
    "tower-lsp"
  ],
  "license": "MIT",
  "main": "./dist/extension.js",
  "scripts": {
    "postinstall": "cd client && pnpm i",
    "compile": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package --no-dependencies",
    "pretest": "tsc -p client/tsconfig.test.json",
    "test": "node ./client/out/test/runTest.js",
    "lint": "oxlint -c oxlint.json .",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check ."
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.10",
    "@types/node": "22.10.2",
    "@vscode/vsce": "^3.2.1",
    "cross-env": "^7.0.2",
    "esbuild": "^0.24.2",
    "glob": "11.0.0",
    "mocha": "11.0.2",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "ts-loader": "^9.5.1",
    "typescript": "5.4.5",
    "vscode-test": "^1.4.0",
    "vscode-uri": "^3.0.2"
  },
  "contributes": {
    "languages": [
      {
        "id": "br",
        "aliases": [
          "Business Rules",
          "BR"
        ],
        "extensions": [
          ".brs",
          ".wbs"
        ],
        "icon": {
          "light": "./icons/light/file-brs.svg",
          "dark": "./icons/dark/file-brs.svg"
        },
        "configuration": "./language-configuration.json"
      },
      {
        "id": "br-compiled",
        "aliases": [
          "BR Compiled"
        ],
        "extensions": [
          ".br",
          ".wb"
        ],
        "icon": {
          "light": "./icons/light/file-br.svg",
          "dark": "./icons/dark/file-br.svg"
        }
      },
      {
        "id": "lay",
        "aliases": [
          "Fileio Layout"
        ],
        "extensions": [
          ".lay"
        ],
        "filenamePatterns": [
          "**/filelay/*"
        ]
      }
    ],
    "grammars": [
      {
        "language": "br",
        "scopeName": "source.br",
        "path": "./syntaxes/br.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "br",
        "path": "./snippets/fileio.json"
      },
      {
        "language": "br",
        "path": "./snippets/lexi.json"
      },
      {
        "language": "br",
        "path": "./snippets/loops.json"
      },
      {
        "language": "br",
        "path": "./snippets/statements.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "br-search",
          "title": "Proc Search",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "br-search": [
        {
          "id": "brSearchResults",
          "name": "Proc Search Results"
        }
      ]
    },
    "commands": [
      {
        "command": "br-lsp.scanAll",
        "title": "BR: Scan All Project Source"
      },
      {
        "command": "br-lsp.nextOccurrence",
        "title": "BR: Next Occurrence"
      },
      {
        "command": "br-lsp.prevOccurrence",
        "title": "BR: Previous Occurrence"
      },
      {
        "command": "br-lsp.autoInsertLineNumber",
        "title": "BR: Auto Insert Line Number"
      },
      {
        "command": "br-lsp.compile",
        "title": "BR: Compile Program"
      },
      {
        "command": "br-lsp.toggleAutoCompile",
        "title": "BR: Toggle Auto-Compile on Save"
      },
      {
        "command": "br-lsp.run",
        "title": "BR: Run Program"
      },
      {
        "command": "br-lsp.selectLaunchConfig",
        "title": "BR: Select Launch Configuration"
      },
      {
        "command": "br-lsp.decompile",
        "title": "BR: Decompile Program"
      },
      {
        "command": "br-lsp.decompileFolder",
        "title": "BR: Decompile All Programs in Folder"
      },
      {
        "command": "br-lsp.toggleInspector",
        "title": "BR: Toggle Tree-Sitter Inspector"
      },
      {
        "command": "br-lsp.addLineNumbers",
        "title": "Lexi: Add Line Numbers"
      },
      {
        "command": "br-lsp.stripLineNumbers",
        "title": "Lexi: Strip Line Numbers"
      },
      {
        "command": "br-lsp.procSearch",
        "title": "BR: Proc Search",
        "icon": "$(search)"
      },
      {
        "command": "br-lsp.modifyProcSearch",
        "title": "Modify Search",
        "icon": "$(edit)"
      },
      {
        "command": "br-lsp.clearProcSearch",
        "title": "Clear Search Results",
        "icon": "$(clear-all)"
      },
      {
        "command": "br-lsp.openSearchResult",
        "title": "BR: Open Search Result"
      }
    ],
    "resourceLabelFormatters": [
      {
        "scheme": "br-compiled",
        "formatting": {
          "label": "${path}",
          "separator": "/"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "br-lsp.compiledBREditor",
        "displayName": "BR Compiled File Handler",
        "selector": [
          {
            "filenamePattern": "*.br"
          },
          {
            "filenamePattern": "*.wb"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "br-lsp.procSearch",
          "when": "view == brSearchResults",
          "group": "navigation"
        },
        {
          "command": "br-lsp.modifyProcSearch",
          "when": "view == brSearchResults",
          "group": "navigation"
        },
        {
          "command": "br-lsp.clearProcSearch",
          "when": "view == brSearchResults",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "br-lsp.decompile",
          "when": "resourceExtname == .br || resourceExtname == .wb",
          "group": "navigation"
        },
        {
          "command": "br-lsp.decompileFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "br-lsp.scanAll",
        "key": "ctrl+alt+7"
      },
      {
        "command": "br-lsp.nextOccurrence",
        "key": "ctrl+shift+down",
        "when": "editorTextFocus && editorLangId == br"
      },
      {
        "command": "br-lsp.prevOccurrence",
        "key": "ctrl+shift+up",
        "when": "editorTextFocus && editorLangId == br"
      },
      {
        "command": "br-lsp.compile",
        "key": "ctrl+shift+b",
        "when": "editorTextFocus && editorLangId == br"
      },
      {
        "command": "br-lsp.run",
        "key": "ctrl+shift+r",
        "when": "editorTextFocus && editorLangId == br"
      },
      {
        "command": "br-lsp.autoInsertLineNumber",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == br && !suggestWidgetVisible && !renameInputVisible && !inSnippetMode && !quickFixWidgetVisible"
      },
      {
        "command": "br-lsp.toggleInspector",
        "key": "ctrl+shift+alt+i",
        "when": "editorTextFocus && editorLangId == br"
      },
      {
        "command": "br-lsp.addLineNumbers",
        "key": "ctrl+alt+3",
        "when": "editorTextFocus && editorLangId == br"
      },
      {
        "command": "br-lsp.stripLineNumbers",
        "key": "ctrl+alt+4",
        "when": "editorTextFocus && editorLangId == br"
      },
      {
        "command": "br-lsp.procSearch",
        "key": "ctrl+alt+f"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "br",
        "scopes": {
          "keyword": [
            "keyword.statement.br"
          ],
          "keyword.controlFlow": [
            "keyword.control.br"
          ],
          "function": [
            "entity.name.function.br"
          ],
          "function.defaultLibrary": [
            "entity.name.function.br"
          ],
          "variable": [
            "variable.numeric.br"
          ],
          "number": [
            "constant.numeric.br"
          ],
          "property": [
            "string.regexp.line-label.br"
          ],
          "property.definition": [
            "string.regexp.line-label.br"
          ],
          "enumMember": [
            "keyword.errorcondition.br"
          ],
          "operator": [
            "keyword.operator.mathematical.br"
          ],
          "lineNumber": [
            "linenumber.br"
          ]
        }
      },
      {
        "language": "lay",
        "scopes": {
          "invalid": [
            "invalid"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "[br]": {
        "files.encoding": "cp437"
      }
    },
    "configuration": {
      "type": "object",
      "title": "BR Language Server",
      "properties": {
        "br-lsp.autoLineNumbers.enabled": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Automatically add line numbers when pressing Enter if the current line has a line number."
        },
        "br-lsp.autoLineNumbers.increment": {
          "type": "number",
          "scope": "resource",
          "default": 10,
          "description": "Default increment for auto-generated line numbers. Will be overridden by detected pattern from surrounding lines."
        },
        "br-lsp.autoLineNumbers.zeroPadding": {
          "type": "number",
          "scope": "resource",
          "default": 5,
          "description": "Number of digits for line numbers (e.g., 5 for '00100'). Will be overridden by detected padding from surrounding lines."
        },
        "br-lsp.diagnostics.syntax": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Report syntax errors from the tree-sitter parser."
        },
        "br-lsp.diagnostics.functions": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Report function diagnostics (missing FNEND, duplicate functions, parameter count/type mismatches)."
        },
        "br-lsp.diagnostics.undefinedFunctions": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Report calls to functions not defined in the workspace."
        },
        "br-lsp.diagnostics.unusedVariables": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Report unused DIM variables and unused LIBRARY imports."
        },
        "br-lsp.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the BR language server."
        }
      }
    }
  },
  "activationEvents": [
    "onCustomEditor:br-lsp.compiledBREditor",
    "onFileSystem:br-compiled",
    "onLanguage:br",
    "onLanguage:lay"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "packageManager": "pnpm@8.15.7",
  "enabledApiProposals": []
}
